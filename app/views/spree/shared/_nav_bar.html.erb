  .menu-element:link {
    color: white;
    text-decoration: none;
  }

  .menu-element {
    color: white;
    text-decoration: none;
    cursor: pointer;
  }

  a:hover {
    cursor: pointer;
  }

  .menu-element:visited {
    color: white;
    text-decoration: none;
  }

  .menu-element:hover {
    color: white;
    text-decoration: underline;
  }

  .menu-element:active {
    color: white;
    text-decoration: none;
  }
